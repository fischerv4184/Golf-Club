from player import player
from Schedule import *
players=[]

def readFile():
    infile=open("score_sheet.csv","r")
    infile.readline()
    infile.readline()
    counter=0
    for line in infile:
        data=line.split(",")
        if data[0]!="":
            players.append(player(data[3],data[4],data[5],data[6],data[2],data[17]))

