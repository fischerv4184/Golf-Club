def findPlayer():
    b = False
    #search through list of player objects to find desired player
    name = input("What is the name of the player you wish to find? First and Last name\n")
    for x in players:
        if (x.getName == name):
            print("Player found!")
            b = True
            x.stats()
            #maybe ofter to show player stats? player information? How do we want to show this
            break
        
    if (b == False):
        print("Player not found in database.") 
    
