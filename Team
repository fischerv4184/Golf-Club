class Team:
    def __init__(self,players,name, gender,grade): 
        self.players=players #an array of players
        self.gender=gender
        self.grade=grade
        self.ranking=0
        self.full=False
        self.name=name
        
    def findRanking(self):
        #add together all rankings of players on the team using getRanking
        #divide by number of golfers
        count=0
        for x in self.players:
            self.ranking=self.ranking+x.getranking()
            count=count+1
            self.ranking=self.ranking/count      
        
